<div class="ui-corner-all custom-corners">
    <div class="ui-bar ui-bar-a">
        <h1><%= @group.group_name %></h1>
    </div>
</div>

<%= form_for @conn, page_path(@conn, :index, @group.crypto_id), [method: :get, id: "calcFrm"],  fn f -> %>
<div class="ui-corner-all custom-corners">
            <%= select f, :item_id, Enum.map(@items, &{&1.item_name, &1.id}) %>
    <div class="ui-body ui-body-a">
            <h1>定価：<%= @price.price %>円</h1>
            <input id="price" type="hidden" value="<%= @price.price %>">
        </div>
    </div>
</div>

<div class="ui-corner-all custom-corners">
    <div class="ui-bar ui-bar-a">
        <h3>金額</h3>
    </div>
    <div class="ui-body ui-body-a">
        <input type="number" data-clear-btn="true" name="amount" pattern="[0-9]*" id="amount" value="0">
        <input type="hidden" id="num" value="0">
    </div>
</div>

<div class="ui-corner-all custom-corners">
    <div class="ui-bar ui-bar-a">
        <h3>個数</h3>
    </div>
    <div class="ui-body ui-body-a">

        <fieldset class="ui-grid-c">
            <div class="ui-block-a"><input id="btn01" type="button" value="1"></div>
            <div class="ui-block-b"><input id="btn02" type="button" value="2"></div>
            <div class="ui-block-c"><input id="btn03" type="button" value="3"></div>
            <div class="ui-block-d"><input id="btn04" type="button" value="4"></div>
        </fieldset>
        <fieldset class="ui-grid-c">
            <div class="ui-block-a"><input id="btn05" type="button" value="5"></div>
            <div class="ui-block-b"><input id="btn06" type="button" value="6"></div>
            <div class="ui-block-c"><input id="btn07" type="button" value="7"></div>
            <div class="ui-block-d"><input id="btn08" type="button" value="8"></div>
        </fieldset>
        <fieldset class="ui-grid-c">
            <div class="ui-block-a"><input id="btn09" type="button" value="9"></div>
            <div class="ui-block-b"><input id="btn10" type="button" value="10"></div>
            <div class="ui-block-c">
                <input id="btnAlt" type="button" value="訂正"  data-theme="b">
                <div style="display: none">
                    <a id="hiddenBtn" href="#popupDialog" data-rel="popup" data-position-to="window" data-transition="pop" ></a>
                </div>
            </div>
            <div class="ui-block-d">
                <input id="btnEnt" type="button" value="確定" data-theme="b">
                <div style="display: none">
                    <a id="hiddenBtn" href="#popupDialog" data-rel="popup" data-position-to="window" data-transition="pop" ></a>
                </div>
        </fieldset>

    </div>
</div>
<% end %>

<div id="popupDialog" style="max-width: 400px;" data-role="popup" data-theme="b" data-overlay-theme="b" data-dismissible="false">
    <div data-role="header" data-theme="a">
        <h1 id="item_name">ITEM NAME</h1>
    </div>
    <div class="ui-content" role="main">
        <h3 id="content" class="ui-title">XXX円 × Y個 = X,XXX円</h3>
        <p></p>
        <a class="ui-btn ui-corner-all ui-shadow ui-btn-inline ui-btn-b" href="#" data-rel="back">Cancel</a>
        <a class="ui-btn ui-corner-all ui-shadow ui-btn-inline ui-btn-b" href="#" data-transition="flow" data-rel="back">OK</a>
    </div>
</div>


<script>
    $(function(){
        //商品選択ボックス
        $('select').change(function() {
          this.form.submit();
        });
        //確定ボタン
        $('#btnEnt').click(function() {
            $('#hiddenBtn').click();
            var item_name = $('[name=item_id] option:selected');
            var num = $('#num').val();
            var price = $('#price').val();
            var amount = $('#amount').val();
            //ポップアップ表示
            $('#popupDialog h1').html(item_name);
            $('#popupDialog #content').html(price + '円 × ' + num + '個 = ' + amount +'円');
            // this.form.action = '/sales'
            // this.form.method = 'POST'
            // this.form.submit();
        });
        //訂正ボタン
        $('#btnAlt').click(function() {
            $('#hiddenBtn').click();

            // this.form.action = '/sales'
            // this.form.method = 'POST'
            // this.form.submit();
        });
        //計算ボタン
        $('#btn01').click(function(){
            calcDisplay(1);
        });
        $('#btn02').click(function(){
            calcDisplay(2);
        });
        $('#btn03').click(function(){
            calcDisplay(3);
        });
        $('#btn04').click(function(){
            calcDisplay(4);
        });
        $('#btn05').click(function(){
            calcDisplay(5);
        });
        $('#btn06').click(function(){
            calcDisplay(6);
        });
        $('#btn07').click(function(){
            calcDisplay(7);
        });
        $('#btn08').click(function(){
            calcDisplay(8);
        });
        $('#btn09').click(function(){
            calcDisplay(9);
        });
        $('#btn10').click(function(){
            calcDisplay(10);
        });
        //算出結果表示
        function calcDisplay(num){
            var price = $('#price').val();
            $('#num').val(num);
            $('#amount').val(price * num);
        }
        //合計クリア
        $('#amount').change(function() {
            if(this.value == ''){
                $('#amount').val(0);
            }
        });

    })
</script>
<style>
    #amount{
        text-align: right;
    }
</style>